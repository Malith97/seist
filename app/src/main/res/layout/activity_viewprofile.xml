<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353A50"
    tools:context="com.synnlabz.seist.Profile.Viewprofile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#353A50"
        android:minHeight="?attr/actionBarSize">

        <ImageButton
            android:onClick="BackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:fontFamily="@font/g_light"
            android:textColor="@color/white"
            android:src="@drawable/ic_arrow"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll_view_1"
        android:layout_below="@id/toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel_001"
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <pl.bclogic.pulsator4droid.library.PulsatorLayout
                        android:id="@+id/pulsator"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        app:pulse_count="4"
                        app:pulse_duration="5000"
                        app:pulse_repeat="0"
                        app:pulse_color="@color/white"
                        app:pulse_startFromScratch="false"
                        app:pulse_interpolator="Linear"
                        android:layout_marginTop="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/profileImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/default_user"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"/>

                    </pl.bclogic.pulsator4droid.library.PulsatorLayout>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Malith Ileperuma"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bio"
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Like see the sky and interested in programming"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"/>



                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_002"
                android:layout_below="@+id/rel_001"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="20dp"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="Age"
                                            android:textStyle="bold"
                                            android:layout_marginBottom="15dp"
                                            android:textColor="#000"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/age"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="23"
                                            android:textColor="#000"
                                            android:textSize="18dp" />


                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="20dp"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="Degree"
                                            android:textStyle="bold"
                                            android:layout_marginBottom="15dp"
                                            android:textColor="#000"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/degree"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="CS"
                                            android:textColor="#000"
                                            android:textSize="18dp" />


                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="20dp"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="Intake"
                                            android:textStyle="bold"
                                            android:layout_marginBottom="15dp"
                                            android:textColor="#000"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/intake"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="35"
                                            android:textColor="#000"
                                            android:textSize="18dp" />


                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="20dp"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="Faculty"
                                            android:textStyle="bold"
                                            android:layout_marginBottom="15dp"
                                            android:textColor="#000"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/faculty"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/roboto_regular"
                                            android:text="Computing"
                                            android:textColor="#000"
                                            android:textSize="18dp" />


                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>




    </ScrollView>

</RelativeLayout>